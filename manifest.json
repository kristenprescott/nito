{
  "manifest_version": 2,
  "name": "Cookie-Free",
  "description": "Unlimited access to Medium posts",
  "version": "0.1",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "cookies",
    "https://medium.com/*",
    "https://betterprogramming.pub/*"
  ],
  "browser_action": { "default_icon": "cookie.png" },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ]
}
