{
  "manifest_version": 3,
  "name": "Nito",
  "description": "Unlimited access to Medium posts",
  "version": "0.1",
  "icons": {
    "16": "cookie.png",
    "32": "cookie.png",
    "48": "cookie.png",
    "128": "cookie.png"
  },
  "permissions": [
    "tabs",
    "cookies",
    "scripting"
  ],
  "host_permissions": ["*://medium.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "cookie.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ]
}
